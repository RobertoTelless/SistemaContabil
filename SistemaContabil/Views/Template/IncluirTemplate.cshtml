@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.TemplateViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Padrões de Mensagens</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaTemplateEMail", "TemplateEMail")">Padrões de Mensagens</a>
            </li>
            <li class="active">
                <strong>Padrões de Mensagens - Inclusão</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Padrões de Mensagens - Inclusão</h5>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        @using (Html.BeginForm("IncluirTemplate", "Template", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {
                            <div class="form-group">
                                <br />
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                    <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma Inclusão do Padrão de Mensagem</button>
                                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseTemplate", controller: "Template")
                                </div>
                            </div>
                            
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            @Html.HiddenFor(m => m.ASSI_CD_ID)
                                            @Html.HiddenFor(m => m.TEMP_IN_ATIVO)
                                            @Html.HiddenFor(m => m.TEMP_DT_CRIACAO)
                                            @Html.HiddenFor(m => m.TEMP_IN_EDITAVEL)
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12" style="margin-left: 6px">
                                                    Sigla*
                                                    @Html.TextBoxFor(m => m.TEMP_SG_SIGLA, new { @class = "form-control", autofocus = true, @id = "sigla" })
                                                    @Html.ValidationMessageFor(m => m.TEMP_SG_SIGLA, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12" style="margin-left: 6px">
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.TEMP_NM_NOME, new { @class = "form-control", autofocus = true, @id = "nome" })
                                                    @Html.ValidationMessageFor(m => m.TEMP_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row" id="EM">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Cabeçalho da Mensagem
                                                    @Html.TextAreaFor(m => m.TEMP_TX_CABECALHO, new { @class = "form-control summernote", style = "width: 100%; height: 100px;", autofocus = true })
                                                </div>
                                            </div>                                       
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Corpo da Mensagem
                                                    @Html.TextAreaFor(m => m.TEMP_TX_CORPO, new { @class = "form-control summernote", style = "width: 100%; height: 200px;", autofocus = true })
                                                </div>
                                            </div>
                                            <h5>A tag {Assinatura} está disponível no rodapé e se usada será exibido o nome do assinante</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Rodapé da Mensagem
                                                    @Html.TextAreaFor(m => m.TEMP_TX_DADOS, new { @class = "form-control summernote", style = "width: 100%; height: 100px;", autofocus = true })
                                                </div>
                                            </div>                                       
                                        </div>
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <br />
                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                        @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                        <button style="margin-left: 15px;" class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma Inclusão de Modelo</button>
                                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseTemplateEMail", controller: "TemplateEMail")
                                    </div>
                                </div>*@
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

